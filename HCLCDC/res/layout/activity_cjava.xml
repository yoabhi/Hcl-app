<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

<LinearLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    
   
      <ImageView
        android:id="@+id/ivCjava"
        android:layout_width="108dp"
        android:layout_height="63dp"
        android:src="@drawable/cjava" />
      
    <TextView
        android:id="@+id/tvCjava"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.02"
        android:text="C Java"
        android:textSize="19sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp" />
    
    
    </LinearLayout>

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
     android:background="@drawable/rect"
     android:layout_marginTop="20dp" >

    <TextView
        android:id="@+id/Cjavadis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/cjava"
        android:textSize="15sp" 
        android:paddingBottom="25dp"/>
</LinearLayout>

<LinearLayout android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="100"
    android:layout_marginTop="20dp"
    >
    
    <TextView
    android:id="@+id/dur"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="Duration (In Hrs)"
    android:layout_weight="50" 
    android:textColor="#00CC33"
    android:textSize="15sp"
    android:paddingLeft="15dp"
    />
<TextView
        android:layout_weight="60"
        android:id="@+id/squery"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Send Enquiry"
        android:textColor="#00CC33"
        android:textSize="15sp"
        android:gravity="right" />
    
    
</LinearLayout>
<LinearLayout android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="100"
    android:layout_marginTop="20dp">
    
   
    <TextView
    android:id="@+id/hr"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="80 hr"
    android:layout_weight="50" 
    android:textSize="15sp"
    android:gravity="center"
    android:paddingRight="50dp"
    
   
    />
    
    <Button
    android:layout_weight="50" 
    android:gravity="left"
    android:layout_marginRight="50dp"
    android:id="@+id/send"
     android:layout_width="130dp"
     android:layout_height="40dp"
    android:background="@drawable/send"
    android:paddingBottom="50dp"
    android:layout_marginBottom="10dp" />
    
</LinearLayout>
</LinearLayout>
